<resources>

    <style name="AppTheme.MusicImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="background">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@android:color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:imageButtonStyle">@style/AppTheme.MusicImageButton</item>
        <item name="imageButtonStyle">@style/AppTheme.MusicImageButton</item>
    </style>


    <style name="AppTheme.FullScreen" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
