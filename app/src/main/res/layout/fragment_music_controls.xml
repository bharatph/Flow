<com.aram.android.musicplayer.ThreesomeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aram.android.musicplayer.MusicControlsFragment">

    <include
        android:id="@+id/constraintLayoutMusicInfo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/horizontal_constraint_large"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        layout="@layout/song_info_layout"/>
            <RelativeLayout
                android:id="@+id/constraintLayoutMain"
                android:layout_width="@dimen/seekbar_size_large"
                android:layout_height="@dimen/seekbar_size_large"
                android:layout_margin="@dimen/horizontal_constraint_large"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="@dimen/horizontal_constraint_large"
                android:layout_marginLeft="@dimen/horizontal_constraint_large"
                android:layout_marginRight="@dimen/horizontal_constraint_large"
                android:layout_marginStart="@dimen/horizontal_constraint_large"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayoutControls"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayoutMusicInfo">
            </RelativeLayout>

            <android.support.constraint.ConstraintLayout
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/horizontal_constraint_large"
                android:layout_marginLeft="@dimen/horizontal_constraint_large"
                android:layout_marginRight="@dimen/horizontal_constraint_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginStart="@dimen/horizontal_constraint_large"
                android:layout_marginEnd="@dimen/horizontal_constraint_large"
                android:id="@+id/constraintLayoutControls">

                <ToggleButton
                    android:id="@+id/buttonRepeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/horizontal_constraint_large"
                    app:layout_goneMarginStart="@dimen/horizontal_constraint_large"
                    android:layout_marginTop="@dimen/horizontal_constraint_small"
                    android:layout_marginBottom="@dimen/horizontal_constraint_small"
                    android:background="@android:color/transparent"
                    android:hint="@string/button_repeat_hint"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/horizontal_constraint_large" />


                <ToggleButton
                    android:id="@+id/buttonShuffle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/horizontal_constraint_large"
                    app:layout_goneMarginEnd="@dimen/horizontal_constraint_large"
                    android:layout_marginTop="@dimen/horizontal_constraint_small"
                    android:layout_marginBottom="@dimen/horizontal_constraint_small"
                    android:background="@android:color/transparent"
                    android:hint="@string/button_shuffle_hint"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginEnd="@dimen/horizontal_constraint_large" />

            </android.support.constraint.ConstraintLayout>


</com.aram.android.musicplayer.ThreesomeLayout>