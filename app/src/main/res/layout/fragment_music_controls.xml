<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/horizontal_padding_medium"
    android:paddingBottom="@dimen/horizontal_padding_medium"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="3"
    android:columnCount="1"
    tools:context="com.aram.android.musicplayer.MusicControlsFragment">
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/song_info"/>

    <include
        android:layout_rowWeight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        layout="@layout/music_view"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/playback_controls"/>
</GridLayout>