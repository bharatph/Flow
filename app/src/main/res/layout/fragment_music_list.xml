<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aram.android.musicplayer.MusicListFragment"
    android:rowCount="3"
    android:columnCount="1">
    <SearchView
        android:id="@+id/searchView"
        android:gravity="right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/horizontal_padding_medium"
        android:layout_marginStart="@dimen/horizontal_padding_medium"
        android:layout_marginEnd="@dimen/horizontal_padding_medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/songCarousel"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:padding="@dimen/vertical_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/searchView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/art"
            app:riv_corner_radius="@dimen/elevation_default"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/songList"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:paddingTop="@dimen/horizontal_constraint_large"
        app:layout_constraintTop_toBottomOf="@+id/songCarousel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>