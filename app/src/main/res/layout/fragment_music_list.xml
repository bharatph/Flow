<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aram.android.musicplayer.MusicListFragment"
    android:rowCount="3"
    android:columnCount="1">

    <include
        layout="@layout/searchbar_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

<RelativeLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/horizontal_margin_large"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="@dimen/horizontal_margin_large">
    </android.support.v7.widget.CardView>
</RelativeLayout>

    <ListView
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:headerDividersEnabled="true"
        tools:listheader="@layout/playback_controls"
        android:layout_rowWeight="1">

    </ListView>
</GridLayout>